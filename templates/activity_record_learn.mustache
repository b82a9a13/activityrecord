                    <th>{{otjh_c}}*</th>
                    <td><input class='w-100' type='number' id="otjhc" step='1' disabled></td>
                    <th>{{expected_otjh_aptp}}*</th>
                    <td><input class='w-100' type='number' id="otjhe" step='1' disabled></td>
                    <th>{{comments}}*</th>
                    <td class='w-50'><textarea class='w-100' id="otjhcomment" disabled></textarea></td>
                </tr>
            </tbody>
        </table>
        <table class='table table-bordered table-striped table-hover'>
            <thead>
                <tr>
                    <th class='text-center'>{{safeguarding}}*</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="td_safeguard"><textarea class='w-100' id="safeguard" disabled></textarea></td>
                </tr>
            </tbody>
        </table>
        <table class='table table-bordered table-striped table-hover'>
            <thead>
                <tr>
                    <th class='text-center'>{{health_as}}*</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="td_hands"><textarea class='w-100' id="hands" disabled></textarea></td>
