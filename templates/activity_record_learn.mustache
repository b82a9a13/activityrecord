                <tr>
                    <td id="td_eandd"><textarea class='w-100' id="eandd" disabled></textarea></td>
                </tr>
            </tbody>
        </table>
        <table class='table table-bordered table-striped table-hover'>
            <thead>
                <tr>
                    <th class='text-center'>{{information_aag}}*</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="td_iaag"><textarea class='w-100' id='iaag' disabled></textarea></td>
                </tr>
            </tbody>
        </table>
        <table class='table table-bordered table-striped table-hover'>
            <thead>
                <tr>
                    <th class='text-center'>{{recap_act_title}}</th>
                    <th class='text-center'>{{what_impact_title}}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class='w-50'><textarea class='w-100' id="recap" disabled></textarea></td>
                    <td class='w-50'><textarea class='w-100' id="recapimpact" disabled></textarea></td>
                </tr>
            </tbody>
        </table>
        <table class='table table-bordered table-striped table-hover'>
            <thead>
                <tr>
                    <th class='text-center'>{{details_ot_title}}*</th>
                    <th class='text-center'>{{modules_aksb}}*</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class='w-75'><textarea class='w-100' id="details" disabled></textarea></td>
                    <td class='w-25'><textarea class='w-100' id="detailsmod" disabled></textarea></td>                
                </tr>
            </tbody>
        </table>
        <table class='table table-bordered table-striped table-hover'>
            <thead>
                <tr>
                    <th class='text-center'>{{what_impactw_title}}*</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><textarea class='w-100' id="impact" disabled></textarea></td>
                </tr>
            </tbody>
        </table>
        <table class='table table-bordered table-striped table-hover' id="func_div" style='display: none;'>
            <thead>
                <tr>
                    <th colspan='3' class='text-center'>{{functional_sp}}</th>
                </tr>
                <tr>
                    <th></th>
                    <th class='text-center' id="func_title0" style='display:none;'>{{learning_t}}*</th>
                    <th class='text-center' id="func_title1" style='display:none;'>{{target_fnv}}*</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class='text-center d-flex' id="math_title"></th>
                    <td id="td_mathtoday"><textarea class='w-100' id="mathtoday" style='display:none;' disabled></textarea></td>
                    <td id="td_mathnext"><textarea class='w-100' id="mathnext" style='display:none;' disabled></textarea></td>
                </tr>
                <tr>
                    <th class='text-center d-flex' id="eng_title"></th>
                    <td id="td_engtoday"><textarea class='w-100' id="engtoday" style='display:none;' disabled></textarea></td>
